{
  "name": "alchemist-notes",
  "version": "1.0.0",
  "description": "An Electron-based note-taking app with an alchemy theme",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:all": "electron-builder -mwl",
    "dev": "concurrently \"npm run start\" \"npm run watch:css\"",
    "watch:css": "postcss src/renderer/styles/tailwind.css -o src/renderer/styles/tailwind.output.css --watch"
  },
  "keywords": [
    "electron",
    "notes",
    "alchemy"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.6.0",
    "electron": "^19.0.4",
    "electron-builder": "^23.0.3",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "tailwindcss": "^3.1.2"
  },
  "dependencies": {
    "quill": "^1.3.7"
  },
  "build": {
    "appId": "com.yourdomain.alchemistnotes",
    "productName": "Alchemist Notes",
    "files": [
      "src/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "src/renderer/assets"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "src/renderer/assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "src/renderer/assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "src/renderer/assets/icon.png"
    }
  }
}
